describe "Mensajeros de Pelicula" {
  test "No est치 pago, no puede ser llevado por Neo a la Matrix" {
    paquete.noPagar()
    assert.equals(paquete.puedeSerEntregadoEn_Por_(laMatrix, neo), false)
  }
  test "Est치 pago, puede ser llevado por Jean a la Matrix" {
    assert.equals(paquete.puedeSerEntregadoEn_Por_(laMatrix, jeanGray), true)
